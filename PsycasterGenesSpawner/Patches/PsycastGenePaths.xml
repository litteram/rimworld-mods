<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!--
      VPE Ranger
  -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VPE - Ranger</li>
    </mods>
    <match Class="PatchOperationAdd" MayRequire="aranmaho.rangerclass">
      <xpath>/Defs/VanillaPsycastsExpanded.PsycasterPathDef[defName="Makai_Ranger"]</xpath>
      <value>
        <lockedReason>gene</lockedReason>
        <requiredGene>
          <GeneDef>Gene_Ranger</GeneDef>
        </requiredGene>
      </value>
    </match>
  </Operation>
  <!--
      Stunskip
  -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Edge of Descension - Stuncaster 3.0</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/VanillaPsycastsExpanded.PsycasterPathDef[defName="VPEStunskipPath"]</xpath>
      <value>
        <lockedReason>gene</lockedReason>
        <requiredGene>
          <GeneDef>Gene_Stunskip</GeneDef>
        </requiredGene>
      </value>
    </match>
  </Operation>
</Patch>
