<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Medieval Overhaul</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>Vanilla Factions Expanded - Classical</li>
      </mods>
      <match Class="PatchOperationSequence">
        <operations>

          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="VFEC_MeatDryingRack"]/costList</xpath>
            <value>
              <costList>
                <WoodLog>80</WoodLog>
                <DankPyon_Iron>20</DankPyon_Iron>
              </costList>
            </value>
          </li>

          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="VFEC_CraftingBench"]/costList</xpath>
            <value>
              <costList>
                <WoodLog>50</WoodLog>
                <DankPyon_Iron>25</DankPyon_Iron>
              </costList>
            </value>
          </li>

          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="VFEC_Beacon"]/costList</xpath>
            <value>
              <costList>
                <WoodLog>150</WoodLog>
                <DankPyon_Iron>50</DankPyon_Iron>
              </costList>
            </value>
          </li>
          
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="VFEC_Turret_Scorpion"]/costList</xpath>
            <value>
              <costList>
                <WoodLog>70</WoodLog>
                <DankPyon_Iron>25</DankPyon_Iron>
              </costList>
            </value>
          </li>

        </operations>
      </match>
    </match>
  </Operation>
</Patch>
      