<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Medieval Overhaul</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>Windows</li>
            </mods>

            <match Class="PatchOperationSequence">
                <operations>
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="OpenWindow"]/costList</xpath>
                        <value>
                            <costList>
                                <DankPyon_IronIngot>5</DankPyon_IronIngot>
                            </costList>
                        </value>
                    </li>

                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="LargeOpenWindow"]/costList</xpath>
                        <value>
                            <costList>
                                <DankPyon_IronIngot>15</DankPyon_IronIngot>
                            </costList>
                        </value>
                    </li>

                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="HugeOpenWindow"]/costList</xpath>
                        <value>
                            <costList>
                                <DankPyon_IronIngot>25</DankPyon_IronIngot>
                            </costList>
                        </value>
                    </li>

                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="LargeReinforcedOpenWindow"]/costList</xpath>
                        <value>
                            <costList>
                                <Steel>60</Steel>
                            </costList>
                        </value>
                    </li>

                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="ReinforcedOpenWindow"]/costList</xpath>
                        <value>
                            <costList>
                                <Steel>20</Steel>
                            </costList>
                        </value>
                    </li>

                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="LargeReinforcedOpenWindow"]/costList</xpath>
                        <value>
                            <costList>
                                <Steel>60</Steel>
                            </costList>
                        </value>
                    </li>

                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ResearchProjectDef[defName="Glassworks"]/researchViewX</xpath>
                        <value>
                            <researchViewX>3.00</researchViewX>
                        </value>
                    </li>

                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ResearchProjectDef[defName="Glassworks"]/researchViewY</xpath>
                        <value>
                            <researchViewY>4.15</researchViewY>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>
</Patch>
