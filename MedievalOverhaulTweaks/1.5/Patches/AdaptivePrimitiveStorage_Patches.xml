<?xml version="1.0" encoding="utf-8"?>

<Patch>
  <Operation Class="XmlExtensions.FindMod">
    <mods>
      <li>Adaptive Primitive Storage</li>
      <li>Medieval Overhaul</li>
    </mods>
    <logic>and</logic>
    <caseTrue>

      <!-- wood -->
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[
          defName="ASF_StoragePit" or
          defName="ASF_SmallLogPile" or
          defName="ASF_LargeLogPile"
        ]/stuffCategories</xpath>
        <value>
          <stuffCategories>
            <li>DankPyon_RawWood</li>
          </stuffCategories>
        </value>
      </li>

      <!-- storage settings for wood piles -->
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[
          defName="ASF_SmallLogPile" or
          defName="ASF_LargeLogPile"
        ]/building/defaultStorageSettings/filter/thingsDefs</xpath>
        <value>
          <thingDefs><li>DankPyon_RawWood</li></thingDefs>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[
          defName="ASF_SmallLogPile" or
          defName="ASF_LargeLogPile"
        ]/building/fixedStorageSettings/filter/thingsDefs</xpath>
        <value>
          <thingDefs><li>DankPyon_RawWood</li></thingDefs>
        </value>
      </li>


      <!-- fuel -->
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[
          defName="ASF_StoragePit"
        ]/comps/li[Class="CompProperties_Refuelable"]/fuelFilter/thingDefs</xpath>
        <value>
          <li>DankPyon_RawWood</li>
          <li>DankPyon_Coal</li>
        </value>
      </li>

      <!-- research -->
      <li Class="XmlExtensions.PatchOperationAddOrReplace">
        <xpath>Defs/ResearchProjectDef[defName="ASF_MeatRack"]/prerequisites</xpath>
        <value>
          <li>VFET_Hunting</li>
        </value>
      </li>

      <li Class="XmlExtensions.PatchOperationAddOrReplace">
        <xpath>Defs/ResearchProjectDef[
          defName="ASF_WovenBasket" or
          defName="ASF_WovenBasketDouble" or
          defName="ASF_WovenBasketTriple"
        ]</xpath>
        <value>
          <li>VFET_Agriculture</li>
        </value>
      </li>

      <li Class="XmlExtensions.PatchOperationAddOrReplace">
        <xpath>Defs/ResearchProjectDef[defName="ASF_Granary"]</xpath>
        <value>
          <li>VFET_Construction</li>
          <li>VFET_Agriculture</li>
        </value>
      </li>

      <li Class="XmlExtensions.PatchOperationAddOrReplace">
        <xpath>Defs/ResearchProjectDef[
          defName="ASF_WeaponRack" or
          defName="ASF_ClayPotCovered" or
          defName="ASF_ClayPotUncovered" or
          defName="ASF_CellarStone"
        ]</xpath>
        <value>
          <li>VFET_Culture</li>
        </value>
      </li>


    </caseTrue>
  </Operation>
</Patch>
