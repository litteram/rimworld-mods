<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <XmlExtensions.SettingsMenuDef>
    <defName>zenlorMOTweaks</defName>
    <modId>zenlor.MOTweaks</modId>
    <label>MO Tweaks</label>
    <settings>
      <!-- Generic Patches {{{ -->
      <li Class="XmlExtensions.Setting.CollapsibleSettings">
        <label>Generic Medieval mod patches</label>
        <headerFont>Medium</headerFont>
        <padLeft>24</padLeft>
        <settings>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Royalty</label>
            <key>mot-integration-royalty</key>
            <defaultValue>True</defaultValue>
            <tooltip>Move Piano technology to Medieval</tooltip>
          </li>
        </settings>
      </li>
      <!-- }}} -->
      <li Class="XmlExtensions.Setting.Gap">
        <spacing>12</spacing>
      </li>
      <!-- Medieval Overhaul Tweaks {{{ -->
      <li Class="XmlExtensions.Setting.CollapsibleSettings">
        <label>Medieval Overhaul</label>
        <headerFont>Medium</headerFont>
        <padLeft>24</padLeft>
        <settings>
          <li Class="XmlExtensions.Setting.Text">
            <text>recipe fixes</text>
            <anchor>Middle</anchor>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-workbench-recipes</key>
            <label>Workbench Recipes</label>
            <defaultValue>true</defaultValue>
            <tooltip>Include all missing recipes from crafting spot in the workbench</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-anvil-recipes</key>
            <label>Smelter/Machining table Recipes</label>
            <defaultValue>true</defaultValue>
            <tooltip>Include all missing recipes from electric smelter and Machining table to the Anvil</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.GapLine"/>
          <li Class="XmlExtensions.Setting.Text">
            <text>mineshaft</text>
            <anchor>Middle</anchor>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-mineshaft-gems</key>
            <label>Add gems to the mineshaft recipes</label>
            <defaultValue>false</defaultValue>
            <tooltip>The original ancient inhabitants of the dark forest remain asleep</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Slider">
            <key>mot-mineshaft-gems-work</key>
            <label>Work needed to mine gems: {mot-mineshaft-gems-work} (default 1600)</label>
            <defaultValue>1600</defaultValue>
            <min>200</min>
            <max>6400</max>
            <decimals>0</decimals>
          </li>
          <li Class="XmlExtensions.Setting.GapLine"/>
          <li Class="XmlExtensions.Setting.Text">
            <text>Dark forest</text>
            <anchor>Middle</anchor>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-darkforest-easy</key>
            <label>Peaceful Dark forest</label>
            <defaultValue>false</defaultValue>
            <tooltip>The original ancient inhabitants of the dark forest remain asleep</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-darkforest-hard</key>
            <label>Harder Dark forest</label>
            <defaultValue>false</defaultValue>
            <tooltip>Increase the spawn rate of Dark forest ancient inhabitants</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.GapLine"/>
          <li Class="XmlExtensions.Setting.Text">
            <text>generic patches</text>
            <anchor>Middle</anchor>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-dangerous-patches</key>
            <label>Dangerous patches</label>
            <defaultValue>false</defaultValue>
            <tooltip>Run a dangerous destructive patch to replace industrial and spacer components in recipes. Use with care!</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-scenario-fix</key>
            <label>Fix wood in all scenarios</label>
            <defaultValue>false</defaultValue>
            <tooltip>Try to fix all custom and modded scenarios replacing wood planks with raw wood</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-lagfree-lamps</key>
            <label>Lag-free lamps and torches</label>
            <defaultValue>false</defaultValue>
            <tooltip>Remove the fuel comp from most Medieval Overhaul torches and lamps</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-milkable-rox</key>
            <label>Mighty Rox produces Milk</label>
            <defaultValue>false</defaultValue>
            <tooltip>The ancient mighty Rox now produces milk at slow rate.</tooltip>
          </li>
        </settings>
      </li>
      <!-- }}} -->
      <li Class="XmlExtensions.Setting.Gap">
        <spacing>12</spacing>
      </li>
      <!-- Medieval Overhaul Tweaks {{{ -->
      <li Class="XmlExtensions.Setting.CollapsibleSettings">
        <label>Medieval Overhaul Integrations</label>
        <headerFont>Medium</headerFont>
        <padLeft>24</padLeft>
        <settings>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-integration-adobeabode</key>
            <label>Adobe Abode</label>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-integration-cashregister</key>
            <label>Cash Register</label>
            <defaultValue>True</defaultValue>
            <tooltip>Change Components requirement into Basic medieval Components</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Fortifications - Medieval - Material</label>
            <key>mot-integration-fortifications-medieval</key>
            <defaultValue>True</defaultValue>
            <tooltip>Masonry costs Iron Ingots instead of Steel</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Mend And Recycle</label>
            <key>mot-integration-mendandrecycle</key>
            <defaultValue>True</defaultValue>
            <tooltip>Research is moved to the medieval ages and requires Complex Clothing and Smithing. Mending table requires Basic Medieval Components.</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>More Linkables</label>
            <key>mot-integration-morelinkables</key>
            <defaultValue>True</defaultValue>
            <tooltip>Medieval production facilities are affected by linkables added by More Linkables</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Packed Sand and Dirt</label>
            <key>mot-integration-packedsanddirt</key>
            <defaultValue>True</defaultValue>
            <tooltip>Packed sand and dirt for terrains added by Alpha Biomes and Medieval Overhaul</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>[SYR] Trait Values</label>
            <key>mot-integration-straitvalues</key>
            <defaultValue>True</defaultValue>
            <tooltip>Add points to traits added by Medieval Overhaul</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Simple Landfill</label>
            <key>mot-integration-simplelandfill</key>
            <defaultValue>True</defaultValue>
            <tooltip>Move research for simple landfill to Neolithic and Medieval instead of Industrial</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Windows</label>
            <key>mot-integration-windows</key>
            <defaultValue>True</defaultValue>
            <tooltip>Move Windows research to Medieval, changed recipes to using Iron Ingots and Steel Ingots</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Adaptive Primitive Storage</label>
            <key>mot-integration-adaptive-primitive-storage</key>
            <defaultValue>True</defaultValue>
            <tooltip>Enable recipe changes for some Adaptive Primitive Storage storage solutions. Storage Pit, Log Piles.</tooltip>
          </li>
        </settings>
      </li>
      <li Class="XmlExtensions.Setting.Gap">
        <spacing>12</spacing>
      </li>
      <!-- Vanilla Expanded -->
      <li Class="XmlExtensions.Setting.CollapsibleSettings">
        <label>Vanilla Expanded</label>
        <headerFont>Medium</headerFont>
        <padLeft>24</padLeft>
        <settings>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Vanilla Expanded: Classical</label>
            <tooltip>Vanilla Expanded: Classical integration Patches. Wood log, Iron ingots replacements and Bronze recipe using Iron Ore.</tooltip>
            <key>mot-integration-vfeclassical</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.GapLine"/>
          <li Class="XmlExtensions.Setting.Text">
            <text>Vanilla Expanded: Tribals</text>
            <anchor>Middle</anchor>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>basics</label>
            <key>mot-integration-vfetribal</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>research tree</label>
            <key>mot-integration-vfetribal-research</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Adaptive Primitive Storage</label>
            <key>mot-integration-adaptive-primitive-storage-vfetribal</key>
            <defaultValue>True</defaultValue>
            <tooltip>Add some research prerequisites to storage solutions.</tooltip>
          </li>
        </settings>
      </li>
      <!-- }}} -->
      <li Class="XmlExtensions.Setting.Gap">
        <spacing>12</spacing>
      </li>
      <li Class="XmlExtensions.Setting.CollapsibleSettings">
        <label>SpawnThoseGenes!</label>
        <headerFont>Medium</headerFont>
        <padLeft>24</padLeft>
        <settings>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Add Vanilla Psycast Expanded - Biotech Integration to baseline pawns.</label>
            <key>stg-vpe-psygenes</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Add Psycast aptitude genes to baseliners. (deaf, dull, enhanced and extreme)</label>
            <key>stg-psyaptitude</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Add body type genes for Baseliners (fat, thin, hulk, standard)</label>
            <key>stg-bodytypes</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Skin color genes for Baseliners (all melanine hues and other, less common, colors)</label>
            <key>stg-skincolor</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Ear type genes for Baseliners (just human ears and other questionable choices)</label>
            <key>stg-ears</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>The Profaned psycast integrations</label>
            <key>stg-profaned</key>
            <defaultValue>True</defaultValue>
          </li>
        </settings>
      </li>
      <li Class="XmlExtensions.Setting.Gap">
        <spacing>12</spacing>
      </li>
      <!-- Dubs Bad Hygiene -->
      <li Class="XmlExtensions.Setting.CollapsibleSettings">
        <label>Dubs Bad Hygiene</label>
        <headerFont>Medium</headerFont>
        <defaultState>Closed</defaultState>
        <padLeft>24</padLeft>
        <settings>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Medieval Irrigation</label>
            <key>mot-integration-dbh-irrigation</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Medieval Central Heating</label>
            <key>mot-integration-dbh-heating</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Medieval Central Heating</label>
            <key>mot-integration-dbh-heating</key>
            <defaultValue>True</defaultValue>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <label>Medieval Recipes</label>
            <key>mot-integration-dbh-recipes</key>
            <defaultValue>True</defaultValue>
            <tooltip>Change Steel to Iron Ingots, Components to Basic medieval Components</tooltip>
          </li>
        </settings>
      </li>
      <li Class="XmlExtensions.Setting.Gap">
        <spacing>12</spacing>
      </li>
      <!-- GarlicSauce's Advanced Deep Drill -->
      <li Class="XmlExtensions.Setting.CollapsibleSettings">
        <label>GarlicSauce's Advanced Deep Drill (continued)</label>
        <headerFont>Medium</headerFont>
        <padLeft>24</padLeft>
        <settings>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-integration-advdeepdrill-gems</key>
            <label>Coal and Gems</label>
            <defaultValue>True</defaultValue>
            <tooltip>GarlicSauce's Advanced Deep Drill (Continued) integration with new recipes for Gems and Coal.</tooltip>
          </li>
          <li Class="XmlExtensions.Setting.Checkbox">
            <key>mot-integration-advdeepdrill-ore</key>
            <label>Silver, Gold and Iron ore</label>
            <defaultValue>True</defaultValue>
            <tooltip>GarlicSauce's Advanced Deep Drill (Continued) integration with new recipes for Silver Ore, Gold Ore and Iron Ore instead of finished ingots.</tooltip>
          </li>
        </settings>
      </li>
      <li Class="XmlExtensions.Setting.Gap">
        <spacing>48</spacing>
      </li>
      <li Class="XmlExtensions.Setting.SetColor">
        <color>(255,80,80)</color>
      </li>
      <li Class="XmlExtensions.Setting.Button">
        <label>Restart Game</label>
        <confirm>true</confirm>
        <message>Are you sure you want to restart the game?</message>
        <actions>
          <li Class="XmlExtensions.Action.RestartGame"/>
        </actions>
      </li>
      <li Class="XmlExtensions.Setting.SetColor"/>
    </settings>
  </XmlExtensions.SettingsMenuDef>
</Defs>
