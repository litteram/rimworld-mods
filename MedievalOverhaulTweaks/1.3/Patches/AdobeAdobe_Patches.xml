<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods><li>Adobe Adobe</li></mods>

        <match Class="PatchOperationFindMod">
            <mods>
                <li>Medieval Overhaul</li>
            </mods>

            <match Class="PatchOperationSequence">
                <operations>

                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="JKN_AdobeMixingTable"]/costList</xpath>
                        <value>
                            <costList>
                                <DankPyon_IronIngot>5</DankPyon_IronIngot>
                                <DankPyon_BasicComponent>1</DankPyon_BasicComponent>
                            </costList>
                        </value>
                    </li>

                    <li Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[defName="JKN_AdobeMixingTable"]/stuffCategories</xpath>
                        <value>
                            <li>DankPyon_RawWood</li>
                        </value>
                    </li>

                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="JKN_AdobeBakingFrame"]/costList</xpath>
                        <value>
                            <costList>
                                <DankPyon_RawWood>15</DankPyon_RawWood>
                            </costList>
                        </value>
                    </li>

                </operations>
            </match>
        </match>
    </Operation>
</Patch>
